model team {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  teamId       String         @unique
  teamName     String

  user         user           @relation("UserTeams", fields: [userId], references: [id]) // relation to user
  userId       String         @map("userId") @db.ObjectId

  form         form           @relation("FormTeams", fields: [formId], references: [id]) // relation to form
  formId       String         @map("formId") @db.ObjectId

  participants Participant[]  @relation("TeamParticipants") 

  @@map("team")
}

model Participant {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId

  // Relations
  user      user     @relation("UserParticipants", fields: [userId], references: [id]) // relation to user
  userId    String   @map("userId") @db.ObjectId

  team      team     @relation("TeamParticipants", fields: [teamId], references: [id]) // relation to team
  teamId    String   @map("teamId") @db.ObjectId

  type      Int      @default(0) // 0 for leader, 1 for member

  @@map("participants")
}

